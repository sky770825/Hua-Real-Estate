{
  "name": "hua-real-estate-website",
  "version": "3.1.0",
  "description": "華地產鑽石分會官方網站 - 線上資源中心",
  "main": "index.html",
  "scripts": {
    "start": "live-server --port=3000 --open=/index.html --host=localhost",
    "dev": "live-server --port=3000 --open=/index.html --host=localhost --watch=.",
    "build": "npm run minify-html && npm run minify-css && npm run minify-js",
    "minify-html": "html-minifier --input-dir . --output-dir dist --file-ext html --collapse-whitespace --remove-comments --minify-css --minify-js",
    "minify-css": "cleancss -o dist/styles.min.css styles.css",
    "minify-js": "terser script.js -o dist/script.min.js -c -m",
    "optimize-images": "imagemin 金質獎章/*.{jpg,jpeg,png} --out-dir=dist/images --plugin=mozjpeg --plugin=pngquant",
    "serve": "live-server --port=8080 --open=/index.html",
    "server": "node server.js",
    "api": "node server.js 3001",
    "tools": "node dev-tools.js",
    "stats": "node dev-tools.js stats",
    "check": "node dev-tools.js all",
    "backup": "node dev-tools.js backup",
    "analytics": "node analytics.js report",
    "data": "node analytics.js export",
    "test": "echo 'No tests specified'",
    "lint": "echo 'No linting configured'",
    "clean": "rm -rf dist/",
    "deploy": "npm run build && echo 'Build completed, ready for deployment'"
  },
  "keywords": [
    "華地產",
    "BNI",
    "房地產",
    "包租代管",
    "線上會議",
    "鑽石分會",
    "商務網絡",
    "房地產投資",
    "房產管理",
    "不動產"
  ],
  "author": "資訊長 蔡濬瑒",
  "license": "MIT",
  "devDependencies": {
    "live-server": "^1.2.2",
    "html-minifier": "^4.0.0",
    "clean-css-cli": "^5.6.2",
    "terser": "^5.19.4",
    "imagemin": "^8.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sky770825/Hua-Real-Estate.git"
  },
  "homepage": "https://sky770825.github.io/Hua-Real-Estate/",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
